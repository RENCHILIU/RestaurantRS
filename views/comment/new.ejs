<% include ../partials/header.ejs %>

<div class="container undernav">
    <div class="editForm">

        <h1 style="text-align: center"> Add New Comment to <%= restaurant.name%></h1>

        <form action='/restaurant/<%=restaurant._id%>/comments' method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-primary btn-block">
            </div>
        </form>

        <a href="/restaurant/<%= restaurant._id%>"> Back to the restaurant Detail</a>

    </div>
</div>

<% include ../partials/footer.ejs %>